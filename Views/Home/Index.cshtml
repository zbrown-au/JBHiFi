@using JBHiFi.Models;

@model List<Product>
<div class="jumbotron">
    <h1>JB Hi-Fi Web API</h1>
</div>

<h2>List of Products</h2>

<div class="row">
    <div class="col-md-3">Id</div>
    <div class="col-md-3">Brand</div>
    <div class="col-md-3">Description</div>
    <div class="col-md-3">Model</div>
</div>
<hr />

@foreach (var product in Model)
{
    <div class="row">
        <div class="col-md-3">@product.Id</div>
        <div class="col-md-3">@product.Brand</div>
        <div class="col-md-3">@product.Description</div>
        <div class="col-md-3">@product.Model</div>
    </div>
}

@if (!Model.Any())
{
    <div class="row">
        <div class="col-md-12">No products found</div>
    </div>
}